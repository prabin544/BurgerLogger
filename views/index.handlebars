<h1>Eat-Da-Burger!!</h1>
<img src="/assets/images/burger.jpg" class="burgerimg"/>
<div class="row">
  <div class="col-3"></div>
  <div class="col-3">

    <ol>
      {{#each burgers}}
        {{#unless eaten}}
          {{> burgers/burger-block eat=true}}
        {{/unless}}
      {{/each}}
    </ol>
  </div>

  <div class="col-3">
    <ol>
      {{#each burgers}}
        {{#if eaten}}
          {{> burgers/burger-block eat=false}}
        {{/if}}
      {{/each}}
    </ol>
  </div>
  <div class="col-3"></div>
</div>

<form class="create-form">

  <div class="form-group">
    <textarea id="ca" name="name"></textarea>
  </div>

  <div class="form-group">
    <input type="radio" name="eaten" value="0" checked><br>
  </div>
  <input class="btn btn-primary" type="submit" value="Submit">
 
</form>
<p>Enter the burger you want to eat and Click the "Submit" button</p>