<h1>Burgers!</h1>

<img src="/assets/images/burger.jpg" class="burgerimg"/>
<ul>
  {{#each burgers}}
    {{#unless eat}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if eat}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <input type="radio" name="sleepy" value="1" checked> Eat!<br>
  </div>

  <button type="submit">Add Burger</button>
</form>
